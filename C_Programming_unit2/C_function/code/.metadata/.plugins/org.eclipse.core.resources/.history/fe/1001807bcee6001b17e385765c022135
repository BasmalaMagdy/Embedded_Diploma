#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void Reverse(char str);
int main(void) {
	setvbuf(stdout, NULL, _IONBF, 0);
	setvbuf(stderr, NULL, _IONBF, 0);

	char str[100];
	printf("Enter a sentence : ");
	gets(str);

	//Reverse(str[0]);
	for(int i = strlen(str) ; i > 0 ; i++)
	{
		printf("%c" , str[i]);
	}

	return 0;
}
